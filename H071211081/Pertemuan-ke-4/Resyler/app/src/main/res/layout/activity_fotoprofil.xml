<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#141C3D"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#1C2755"
        android:layout_height="320dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_height="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="-50dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="115dp">
                <ImageView
                    android:id="@+id/gambar2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/hilter" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/nama2"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Hilter"/>
            <TextView
                android:id="@+id/nomortelpon"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="+62 813-4257-5803"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#1C2755"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="80dp">
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginVertical="2dp"
            android:text="Tidak tau juga"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginVertical="2dp"
            android:textSize="15sp"
            android:text="April 4,2023"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>