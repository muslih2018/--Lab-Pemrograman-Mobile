<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/backk32"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Post"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Post"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:shadowColor="#A8FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textAllCaps="true"
            android:textColor="#7866FE"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Post"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center"
            android:shadowColor="#65FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textAllCaps="true"
            android:textColor="#7866FE"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Post"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center"
            android:shadowColor="#34FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textAllCaps="true"
            android:textColor="#7866FE"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:orientation="vertical"
        android:outlineSpotShadowColor="@color/black"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"

                >
                <ImageView
                    android:id="@+id/profil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/popp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Namalengkap"
                    android:layout_width="wrap_content"
                    android:text="muslih2"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/Username"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:text="muslih2"
                    android:textSize="10sp"

                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:orientation="vertical"


            >
            <ImageView
                android:id="@+id/pop"
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/popp"/>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="310dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/desk"
                android:layout_width="wrap_content"
                android:text=" "
                android:textSize="8sp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>